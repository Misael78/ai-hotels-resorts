/**
 * Implements hook_form_views_exposed_form_alter().
 *
 * Customizes the exposed form for the feedback AI submissions view.
 */
function feedback_ai_form_views_exposed_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $view = $form_state->get('view');
  if ($form_id == 'views_exposed_form' && $view->id() == 'feedback_ai_submissions') {
    $form['sentiment_result'] = [
      '#type' => 'select',
      '#title' => t('Sentiment Rating'),
      '#attributes' => ['id' => 'sentiment-result'],
      '#options' => [
        '' => t('ALL'),
        'positive' => t('Positive'),
        'negative' => t('Negative'),
        'neutral' => t('Neutral'),
      ],
    ];
  }

}

/**
 * Implements hook_views_plugins_filter_alter().
 */
function feedback_ai_views_plugins_filter_alter(array &$plugins): void {
  // Use the module filter class for both date and datetime filters.
  if (\array_key_exists('date', $plugins)) {
    $plugins['date']['class'] = FeedbackAiDateTimestamp::class;
  }
}

/**
 * Implements hook_preprocess_views_view().
 */
function feedback_ai_preprocess_views_view(&$variables) {
  $view = $variables['view'];

  // Check if this is the specific view and display you want to target.
  if ($view->id() == 'feedback_ai_submissions' && $view->current_display == 'page_1') {
    // Render the custom block.
    $block_manager = \Drupal::service('plugin.manager.block');
    $block_plugin = $block_manager->createInstance('feedback_ai_chart_block', []);
    $block_render = $block_plugin->build();

    // Add the block render array to the view's render array.
    $variables['header']['feedback_ai_chart_block'] = [
      '#markup' => '',
      '#weight' => -1,
      'content' => $block_render,
    ];
  }
  elseif ($view->id() == 'feedback_ai_submissions' && $view->current_display == 'block_1') {
    $block_manager = \Drupal::service('plugin.manager.block');
    $block_plugin = $block_manager->createInstance('feedback_ai_chart_block', []);
    $block_render = $block_plugin->build();

    // Add the block render array to the view's render array.
    $variables['header']['feedback_ai_chart_block'] = [
      '#markup' => '',
      '#weight' => -1,
      'content' => $block_render,
    ];
  }
}

/**
 * Implements hook_help().
 */
function feedback_ai_help($route_name) {
  switch ($route_name) {
    // Display help text on the module's main help page.
    case 'help.page.feedback_ai':
    $text = file_get_contents(__DIR__ . "/README.md");
    // If the Markdown module is installed...
    if (\Drupal::moduleHandler()->moduleExists('markdown') === TRUE) {
      // Uses the Markdown filter to render the README.
      $filter_manager = \Drupal::service('plugin.manager.filter');
      $settings = \Drupal::configFactory()->get('markdown.settings')->getRawData();
      $config = ['settings' => $settings];
      $filter = $filter_manager->createInstance('markdown', $config);
      $output = $filter->process($text, 'en');
    }
    // Else the Markdown module is not installed...
    else {
      // Outputs the README in plain text.
      $output = '<pre>' . $text . '</pre>';
    }

     return $output;

  }
}
